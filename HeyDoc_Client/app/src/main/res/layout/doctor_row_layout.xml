<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector">

    <ImageView
        android:id="@+id/doctor_row_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/colorAccent"
        android:scaleType="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/doctor_row_fullName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ayoub Red"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/doctor_row_specialities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="tooths specialist" />

        <TextView
            android:id="@+id/doctor_row_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male" />

        <TextView
            android:id="@+id/doctor_row_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20 ans" />
    </LinearLayout>


</LinearLayout>