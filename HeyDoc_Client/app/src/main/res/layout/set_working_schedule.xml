<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/my_working_schedule"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#FFFFFF" />


    <ListView
        android:id="@+id/WorkingSchedule_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv"
        android:layout_margin="10dp" />

    <ImageButton
        android:id="@+id/WorkingSchedule_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/WorkingSchedule_list"
        android:layout_alignEnd="@+id/WorkingSchedule_list"
        android:layout_marginBottom="11dp"
        android:background="@color/colorAccent"
        android:src="@drawable/ic_add_white_24dp"
        android:text="@string/action_add" />

</RelativeLayout>